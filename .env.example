# Общие настройки
NODE_ENV=development
DOMAIN=yourdomain.com

# Telegram Bot
TELEGRAM_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/telegram/webhook

# PostgreSQL
DATABASE_URL=postgresql://postgres:password@db:5432/funnel

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# S3 / Minio
S3_ENDPOINT=http://s3:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET_NAME=my-bucket-name
S3_PUBLIC_URL=http://localhost:9000  # либо https://s3.yourdomain.com в проде

# Google Sheets (опционально)
GOOGLE_SHEETS_ID=your-google-sheet-id
GOOGLE_SERVICE_ACCOUNT_JSON=./secrets/google-service-account.json

# CloudPayments
PAYMENTS_WEBHOOK_URL=https://yourdomain.com/payments/webhook
CLOUDPAYMENTS_PUBLIC_ID=your-public-id
CLOUDPAYMENTS_SECRET=your-secret

# Certbot (только прод)
CERTBOT_EMAIL=you@example.com
